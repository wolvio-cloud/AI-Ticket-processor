# AI Ticket Processor Dashboard - Environment Configuration
#
# Copy this file to .env.local and update the values as needed

# API Server URL (FastAPI backend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL (for real-time updates)
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Dashboard Settings
NEXT_PUBLIC_REFRESH_INTERVAL=30000
NEXT_PUBLIC_AUTO_REFRESH=true

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_DATA_FALLBACK=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Debug Mode
NEXT_PUBLIC_DEBUG=false
